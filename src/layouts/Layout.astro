---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Gestor de Avisos - Nadir Impermeabilizaciones' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <!-- Icons -->
    <link rel="icon" type="image/png" href="/icon-192.png" />
    <link rel="apple-touch-icon" href="/icon-192.png" />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#1e40af" />
    <script is:inline src="/pwa-register.js"></script>
  </head>

  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 text-gray-900"
  >
    <!-- Fondo decorativo (ligero, sin base64) -->
    <div class="pointer-events-none fixed inset-0 opacity-60">
      <div
        class="absolute inset-0"
        style="
          background-image:
            radial-gradient(circle at 20% 20%, rgba(30, 64, 175, 0.10) 0%, transparent 45%),
            radial-gradient(circle at 80% 30%, rgba(79, 70, 229, 0.10) 0%, transparent 45%),
            radial-gradient(circle at 40% 85%, rgba(168, 85, 247, 0.10) 0%, transparent 45%);
        "
      >
      </div>

      <!-- grano sutil para “app premium” -->
      <div
        class="absolute inset-0 opacity-[0.06]"
        style="
          background-image: url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22120%22 height=%22120%22%3E%3Cfilter id=%22n%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.9%22 numOctaves=%222%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22120%22 height=%22120%22 filter=%22url(%23n)%22 opacity=%220.35%22/%3E%3C/svg%3E');
        "
      >
      </div>
    </div>

    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>
